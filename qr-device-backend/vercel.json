{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/devices",
            "dest": "/server.js"
        },
        {
            "src": "/device/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/add-device",
            "dest": "/server.js"
        },
        {
            "src": "/devices/qr/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/server.js"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "https://hindalco-machine.vercel.app"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET,POST,PUT,DELETE,OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "X-Requested-With,Content-Type,Accept"
                }
            ]
        }
    ]
}
